{
  "compilerOptions": {
    "target": "ES6",                    // Specifies the output language level
    "module": "commonjs",               // Module system for Electron
    "outDir": "./dist",                 // Output directory for compiled JavaScript
    "rootDir": "./src",                 // Root directory for TypeScript files
    "strict": true,                     // Enables strict type-checking options
    "esModuleInterop": true ,
    "jsx": "react-jsx" ,     // Allows import/export syntax interoperability
    "noImplicitAny": false,
    "types": ["vite/client"],
    "lib": ["dom", "esnext"],
  },
  "include": ["src/**/*", "node_modules/@ionic/react/**/*"]             // Specifies files to be compiled
}
